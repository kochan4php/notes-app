<%= erb :'layouts/header', locals: {title: 'Register', css_path: '/css/auth.css'} %>
<div class="container">
  <div class="row justify-content-center align-items-center text-center">
    <div class="col-lg-4 col-sm-12">
      <h1 class="h3 mb-3 fw-medium">Register Here</h1>
      <form action="/register" method="post">
        <div class="form-floating">
          <input type="text" class="form-control" id="username" placeholder="Username" name="username" autofocus required>
          <label for="username">Create Your Username</label>
        </div>
        <div class="my-3"></div>
        <div class="form-floating">
          <input type="email" class="form-control" id="email" placeholder="Email" name="email" autofocus required>
          <label for="email">Your Email address</label>
        </div>
        <div class="my-3"></div>
        <div class="form-floating">
          <input type="password" class="form-control" id="password" placeholder="Password" name="password" autofocus required>
          <label for="password">Your Password</label>
        </div>
        <button type="submit" class="btn btn-primary w-100 my-3">Register</button>
      </form>
      <small class="mt-3 d-block">Already registered? <a href="/login">Login Now!</a></small>
    </div>
  </div>
</div>
<%= erb :'layouts/footer' %>
